AP 1
; profit + dir

#ld_wave_num
LDC #ghost_to_far_dist
CGT
TSEL $danger_too_far $check_danger

$check_danger:
    ; in stack should be profit
    #ld_ghosts
    #ld_neigh_point
    LDF @is_danger
    AP 2
    LDC #danger_profit_koef
    MUL
